<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".SignUpActivity">

    <Button
        android:id="@+id/signupMainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginMainButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:onClick="signUp"
        android:text="@string/signup" />

    <Button
        android:id="@+id/loginMainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signupMainButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signupMainButton"
        android:layout_marginBottom="100dp"
        android:onClick="@string/login"
        android:text="@string/login" />

</RelativeLayout>